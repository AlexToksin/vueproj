header{
   padding 28px 140px 28px 132px
}
.header {
  display flex
  flex-direction row
  align-items center
  position relative
  width 100%

  &__text {
    color #ffffff
    text-transform uppercase

    &_big {
      font-family: "Lucida Sans";
      text-shadow: 0 2px 0 rgba(0, 0, 0, 0.42)
      font-size 41px
      font-style italic
      letter-spacing 0.41px
    }

    &_small {
      align-self flex-end
      opacity: 0.77;
      font-family: "Lao UI";
      font-size: 13px;
      font-weight: 400;
      letter-spacing: 0.13px;
      padding: 0 0 8px 0;
    }
  }

  &__logo {
    position relative
    width unset
    align-items: center;
    justify-content: center;
  }
}
.main-nav{
    display flex
    flex-direction row
    align-items: center;
    justify-content: space-around;
    width: 453px;
    height: 41px;
    background-color: #f5c506;
    background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0) 100%);
    margin: 30px 0px 0px 0px;
    &__button{
      &_content{
        justify-content space-between
      }
        display flex
        flex-direction row
        align-items center
        width: 33%;
        height: 100%;
        justify-content: center;
        color: #9b7d08;
        font-family: "Segoe WP";
        font-size: 17px;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 0.17px;
        z-index 4
      &-caption{
        padding: 3px 0px 2px 9px;
      }
      &-border-right{
        width: 1px;
        height: 100%;
        opacity: 0.1;
        background: black;
        display: flex;
      }
      &-border-left{
        width: 1px;
        height: 100%;
        opacity: 0.1;
        background: black;
        display: flex;
      }
      &-wrapper{
        display flex
      }
    }
    &__shadow{
        &_one{
          position: absolute;
          margin: 22px 0px 0px -8px;
          width: 453px;
          height: 41px;
          background-color: #f5c506;
          background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0) 100%);
          opacity: 0.27;
          z-index: 1;
        }
        &_two{
          position: absolute;
          margin: 25px 0px 0px -4px;
          width: 453px;
          height: 41px;
          background-color: #f5c506;
          background-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0) 100%);
          opacity: 0.27;
          z-index: 2;
        }
    }
 }
.logo__shadow{
    position absolute
  }


